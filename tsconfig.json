{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "./dist/out-tsc",
      "baseUrl": "src",
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "target": "ES2022",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2020",
        "dom"
      ],
      "module": "es2020",
      "paths": {
        "rxjs": [
          "node_modules/rxjs"
        ]
      },
      "useDefineForClassFields": false
    }
}
